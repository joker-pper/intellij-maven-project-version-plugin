<idea-plugin>
    <id>com.github.jokerpper.intellij-maven-project-version-plugin</id>
    <name>MPVP(Maven)</name>
    <vendor>joker-pper</vendor>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="181"/>

    <description><![CDATA[
    Maven Project Version Plugin.
    <br/>
    <br/>
    <em>Plugin Menu Added In Tools Menu.</em>
    <br/>
    <br/>
    1.More Strategy To Update Version.
    <br/>
    <br/>
    2.Active Show Version In Project View.
    <br/>
    <br/>
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.idea.maven</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <postStartupActivity implementation="com.github.jokerpper.mavenprojectversion.startup.MavenProjectVersionStartupActivity" />

        <projectViewNodeDecorator implementation="com.github.jokerpper.mavenprojectversion.decorator.MavenProjectVersionViewDecorator"/>
    </extensions>


    <project-components>
        <component>
            <implementation-class>com.github.jokerpper.mavenprojectversion.state.ShowMavenProjectVersionState</implementation-class>
        </component>
    </project-components>

    <actions>
        <!-- Add your actions here -->

        <group id="MavenProjectVersion.ToolsMenu.ActionGroup" class="com.github.jokerpper.mavenprojectversion.support.MavenProjectVersionActionGroup" popup="true" text="Maven Project Version">
            <add-to-group group-id="ToolsMenu" anchor="last" />
        </group>

        <action id="MavenProjectVersion.ToolsMenu.Update" class="com.github.jokerpper.mavenprojectversion.action.UpdateMavenProjectVersionAction" text="Project Version Update"
                description="maven project version update">
            <add-to-group group-id="MavenProjectVersion.ToolsMenu.ActionGroup" />
        </action>

        <action id="MavenProjectVersion.ToolsMenu.Show" class="com.github.jokerpper.mavenprojectversion.action.ShowMavenProjectVersionAction" text="Project Version Show"
                description="maven project version show">
            <add-to-group group-id="MavenProjectVersion.ToolsMenu.ActionGroup"  anchor="after"
                          relative-to-action="MavenProjectVersion.ToolsMenu.Update" />
        </action>

    </actions>

</idea-plugin>